<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="app"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue=".logs"/>
    <springProperty scope="context" name="LOG_HISTORY" source="app.task.log-clean.retention-days" defaultValue="30"/>
    <springProperty scope="context" name="ROOT_LEVEL" source="app.logging.root-level" defaultValue="INFO"/>
    <springProperty scope="context" name="SQL_LEVEL" source="app.logging.sql.level" defaultValue="DEBUG"/>

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <springProfile name="dev">
        <appender name="NORMAL_FILE" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/normal.log</file>
            <append>false</append>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>INFO</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <appender name="WARN_FILE" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/warn.log</file>
            <append>false</append>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>WARN</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <appender name="ERROR_FILE" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/error.log</file>
            <append>false</append>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <appender name="DEV_STARTUP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <appender name="SQL_FILE" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/sql.log</file>
            <append>false</append>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>DEBUG</level>
            </filter>
        </appender>

        <logger name="com.nebula.config.startup.StartupInfoLogger" level="INFO">
            <appender-ref ref="DEV_STARTUP_CONSOLE"/>
        </logger>

        <logger name="org.apache.ibatis" level="${SQL_LEVEL}" additivity="false">
            <appender-ref ref="SQL_FILE"/>
        </logger>
        <logger name="com.baomidou.mybatisplus" level="${SQL_LEVEL}" additivity="false">
            <appender-ref ref="SQL_FILE"/>
        </logger>
    </springProfile>

    <springProfile name="!dev">
        <appender name="NORMAL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/normal/normal-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>${LOG_HISTORY}</maxHistory>
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>INFO</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/warn/warn-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>${LOG_HISTORY}</maxHistory>
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>WARN</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/error/error-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>${LOG_HISTORY}</maxHistory>
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <logger name="org.apache.ibatis" level="OFF" additivity="false"/>
        <logger name="com.baomidou.mybatisplus" level="OFF" additivity="false"/>
    </springProfile>

    <root level="${ROOT_LEVEL}">
        <appender-ref ref="NORMAL_FILE"/>
        <appender-ref ref="WARN_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>
